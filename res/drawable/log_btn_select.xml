<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <gradient
                    android:startColor="#0789CC"
                    android:endColor="#0096DC"
                    android:angle="270"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient
                    android:startColor="#0789CC"
                    android:endColor="#0096DC"
                    android:angle="270"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                    android:startColor="#0096DC"
                    android:endColor="#0789CC"
                    android:angle="270"/>

            <corners android:radius="5dp"/>
        </shape>

    </item>

</selector>